<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 1. Smart Category Icon -->
        <!-- Visual anchor since we don't have product photos -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="#1A9333EA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgGiftIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_star"
                app:tint="#9333EA"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!-- 2. Item Details -->
        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Caramel Macchiato"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvCustomerName"
            app:layout_constraintEnd_toStartOf="@+id/tvCostMad"
            app:layout_constraintStart_toEndOf="@+id/iconContainer"
            app:layout_constraintTop_toTopOf="@+id/iconContainer"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:text="Client: Mohamed B."
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/iconContainer"
            app:layout_constraintEnd_toStartOf="@+id/tvCostPoints"
            app:layout_constraintStart_toEndOf="@+id/iconContainer"
            app:layout_constraintTop_toBottomOf="@+id/tvItemName" />

        <!-- 3. Financials (Right Aligned) -->
        <TextView
            android:id="@+id/tvCostMad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-25.00 MAD"
            android:fontFamily="sans-serif-medium"
            android:textColor="#EF4444"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvItemName"
            app:layout_constraintBottom_toBottomOf="@+id/tvItemName"/>

        <TextView
            android:id="@+id/tvCostPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(300 Pts)"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#F59E0B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCostMad"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustomerName"/>

        <!-- 4. Subtle Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iconContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 5. Metadata Footer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_person"
                app:tint="?android:attr/textColorTertiary"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/tvCashierName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processed by Sarah"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 10:45 AM"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorTertiary"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>