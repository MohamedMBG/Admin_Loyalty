<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/exampleRow"
    app:cardBackgroundColor="?attr/colorSurface"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="4dp"
        android:gravity="center_vertical">

        <!-- Rank -->
        <TextView
            android:id="@+id/tvRank"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#4F46E5"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Cashier Info with Avatar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp">


            <!-- Name & ID -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvCashierName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvCashierId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: CAS001"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="10sp"
                    android:layout_marginTop="2px" />
            </LinearLayout>
        </LinearLayout>

        <!-- Scans -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvScansValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="#10B981"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvScansLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scans"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10sp"
                android:layout_marginTop="2px" />
        </LinearLayout>

        <!-- Redeems -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvRedeemsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textColor="#7C3AED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRedeemsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="redeems"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10sp"
                android:layout_marginTop="2px" />
        </LinearLayout>

        <!-- Total -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="total"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10sp"
                android:layout_marginTop="2px" />
        </LinearLayout>

        <!-- Performance Indicator -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvPerformanceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_performance_top" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>