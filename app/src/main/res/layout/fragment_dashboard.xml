<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_menu"
                        android:padding="8dp"
                        android:contentDescription="Menu"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:padding="8dp"
                        android:contentDescription="Profile"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="@android:color/black" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Time Period Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:padding="4dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_today"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Today"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#F5F5F5"
                    style="@style/Widget.Material3.Button.TextButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_this_week"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Week"
                    android:textColor="#9E9E9E"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@android:color/transparent"
                    style="@style/Widget.Material3.Button.TextButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_this_month"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Month"
                    android:textColor="#9E9E9E"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@android:color/transparent"
                    style="@style/Widget.Material3.Button.TextButton" />

            </LinearLayout>

            <!-- KPI Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2" >

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin ="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FCFCFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Users"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_active_users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,423"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/percent_users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="↑ 5.2%"
                            android:textSize="13sp"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin ="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FCFCFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Signups"
                            android:textSize="14sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_new_signups"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="89"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/percent_new_users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="↑ 8.1%"
                            android:textSize="13sp"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Points Economy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points Economy"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="10dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Redemption Rate"
                        android:textSize="15sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/tv_redemption_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progress_redemption"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:progress="65"
                    android:max="100"
                    android:progressTint="@android:color/black"
                    android:progressBackgroundTint="#E0E0E0"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="195,000 of 300,000 pts redeemed"
                    android:textSize="13sp"
                    android:textColor="#9E9E9E" />

            </LinearLayout>

            <!-- QR Codes Scanned -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Codes Scanned"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_qr_scans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/light_grey"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="16dp">

                    <!-- Header: title + timeframe chips -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_qr_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QR Scans Overview"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#0F172A" />

                            <TextView
                                android:id="@+id/tv_qr_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today’s performance vs. previous period"
                                android:textSize="11sp"
                                android:textColor="#6B7280"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- KPI row: icon + total + delta -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp">

                        <!-- Icon with soft background -->
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/qr_placeholder_box"
                                app:tint="#2563EB" />
                        </FrameLayout>

                        <!-- Texts -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total scans"
                                android:textSize="12sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/tv_total_scans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2,847"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#0F172A"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- Delta pill -->
                        <TextView
                            android:id="@+id/tv_scans_delta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="↑ 12.3%"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#16A34A"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="6dp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB" />

                    <!-- Chart area -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_qr_scans"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_marginBottom="15dp" />

                    <!-- Stats tiles -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Peak Hour -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peak hour"
                                android:textSize="11sp"
                                android:textColor="#9CA3AF"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tv_peak_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2–3 PM"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#0F172A" />
                        </LinearLayout>

                        <!-- Vertical divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:background="#E5E7EB" />

                        <!-- Avg/hour -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg / hour"
                                android:textSize="11sp"
                                android:textColor="#9CA3AF"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tv_avg_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="237"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#0F172A" />
                        </LinearLayout>

                        <!-- Vertical divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:background="#E5E7EB" />

                        <!-- Success rate -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Success rate"
                                android:textSize="11sp"
                                android:textColor="#9CA3AF"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:id="@+id/tv_success_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98.4%"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#16A34A" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- System Health -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Health"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Connected Devices -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Connected Devices"
                            android:textSize="15sp"
                            android:textColor="#424242" />

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/circle_green"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Online"
                            android:textSize="15sp"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- API Uptime -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="API Uptime"
                            android:textSize="15sp"
                            android:textColor="#424242" />

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/circle_green"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99.9%"
                            android:textSize="15sp"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Database Connection -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Database Connection"
                            android:textSize="15sp"
                            android:textColor="#424242" />

                        <!-- status dot -->
                        <View
                            android:id="@+id/view_db_dot"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/circle_red"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_vertical" />

                        <!-- status text -->
                        <TextView
                            android:id="@+id/tv_db_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error"
                            android:textSize="15sp"
                            android:textColor="#F44336" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>