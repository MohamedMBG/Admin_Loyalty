<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cashier_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 1. SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER SECTION -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gradient Background -->
                <View
                    android:id="@+id/viewHeaderBg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/bg_header_gradient"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Title & Subtitle -->
                <TextView
                    android:id="@+id/tvScreenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="48dp"
                    android:text="Redeem Points"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvScreenSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Process rewards for customers"
                    android:textColor="#CCFFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/tvScreenTitle"
                    app:layout_constraintTop_toBottomOf="@id/tvScreenTitle" />

                <!-- Search Bar (Floating Overlap) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/searchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvScreenSubtitle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Search"
                            android:src="@android:drawable/ic_menu_search"
                            app:tint="?attr/colorPrimary" />

                        <EditText
                            android:id="@+id/searchClient"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@null"
                            android:hint="Scan ID, Phone, or Name..."
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="12dp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textColorHint="?android:attr/textColorSecondary"
                            android:textSize="16sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CONTENT BODY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp">

                <!-- 2. CUSTOMER PROFILE CARD (Minimalist & Clean) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/clientCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:strokeColor="?attr/colorPrimaryContainer"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Profile Header Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Modern Avatar (No Image) -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="14dp"
                                    android:src="@drawable/ic_person"
                                    app:tint="?attr/colorOnPrimaryContainer" />
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Name & ID -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/clientName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Client Name"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/clientId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="ID: --"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <!-- Points Badge -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AVAILABLE"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.1"/>

                                <TextView
                                    android:id="@+id/clientPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#F59E0B"
                                    android:textSize="26sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- PROMO CONTAINER (Dynamic Offers) -->
                        <LinearLayout
                            android:id="@+id/layoutPromoContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:background="@drawable/offer_badge_bg"
                            android:backgroundTint="?attr/colorSurfaceVariant"
                            android:padding="16dp">

                            <!-- Header -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ‰ ELIGIBLE OFFER:"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#10B981"
                                android:letterSpacing="0.05"
                                android:layout_marginBottom="6dp"/>

                            <!-- Preview Item -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â€¢ Free Cookie (Student)"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="14sp"
                                tools:visibility="visible"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- MENU TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rewards Catalog"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="4dp"/>

                <!-- === CATEGORY 1: COFFEE === -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header -->
                        <LinearLayout
                            android:id="@+id/headerHotCoffee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <!-- Category Icon (Restored) -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FFF7ED">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="4dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/hot_drinks"/>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hot Coffee"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="View Items"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Items Container -->
                        <LinearLayout
                            android:id="@+id/itemsHotCoffee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === CATEGORY 2: COLD DRINKS === -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/headerIcedCoffee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#F0F9FF">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/iced_coffee"/>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cold Drinks"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="View Items"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/itemsIcedCoffee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === CATEGORY 3: TEA === -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/headerTea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#ECFDF5">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/tea_icon"/>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tea"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="View Items"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/itemsTea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === CATEGORY 4: FRAPPUCCINO === -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/headerFrappuccino"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FAF5FF">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/frappocino"/>
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Frappuccino"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="View Items"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/itemsFrappuccino"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- === CATEGORY 5: PASTRIES === -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="120dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="0.5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/headerPastries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FDF2F8">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="ðŸ¥"
                                    android:textSize="28sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pastries"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="View Items"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/itemsPastries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingBottom="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 4. BOTTOM BAR (Fixed) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSelectedItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Item"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tvRequiredPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- pts required"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRedeem"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="Redeem"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="textEnd"
                app:iconTint="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>