<?xml version="1.0" encoding="utf-8"?>
<!-- activity_redemption.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Search Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.05"
                android:text="Customer Search"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#E5E7EB"
                android:layout_margin="5dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Search"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#9CA3AF" />

                    <EditText
                        android:id="@+id/searchClient"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Enter customer name or ID"
                        android:inputType="text"
                        android:paddingStart="8dp"
                        android:paddingEnd="16dp"
                        android:textColor="#1F2937"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Client Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/clientCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#3B82F6"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/clientName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    android:textColor="#FFFFFF"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/clientId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="ID: C12345"
                                    android:textColor="#E0E7FF"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:alpha="0.6"
                                android:contentDescription="Customer"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                app:tint="#FFFFFF" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="#60A5FA" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.1"
                                    android:text="Available Points"
                                    android:textColor="#E0E7FF"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/clientPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="150"
                                    android:textColor="#FFFFFF"
                                    android:textSize="36sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Categories Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_margin="5dp"
                android:letterSpacing="0.05"
                android:text="Select Category"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- ========== HOT COFFEE Category (collapsed by default) ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headerHotCoffee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/hot_drinks"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hot Coffee"
                                android:textColor="#1F2937"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="6 items available"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/dividerHotCoffee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/itemsHotCoffee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnEspresso"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Espresso"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnAmericano"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Americano"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnCappuccino"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Cappuccino"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnLatte"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Latte"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnMocha"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Mocha"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnMacchiato"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Macchiato"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== ICED COFFEE Category ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headerIcedCoffee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/iced_coffee"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Iced Coffee"
                                android:textColor="#1F2937"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="4 items available"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/dividerIcedCoffee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/itemsIcedCoffee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnIcedAmericano"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Iced Americano"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnIcedLatte"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Iced Latte"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnIcedMocha"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Iced Mocha"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnColdBrew"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Cold Brew"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== TEA Category ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headerTea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tea_icon"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tea"
                                android:textColor="#1F2937"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="5 items available"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/dividerTea"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/itemsTea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnGreenTea"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Green Tea"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnBlackTea"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Black Tea"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnChamomile"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Chamomile Tea"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnMatchaLatte"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Matcha Latte"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnChaiLatte"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Chai Latte"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== FRAPPUCCINO Category ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headerFrappuccino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/frappocino"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Frappuccino"
                                android:textColor="#1F2937"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="4 items available"
                                android:textColor="#6B7280"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/dividerFrappuccino"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/itemsFrappuccino"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnCoffeeFrappuccino"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Coffee Frappuccino"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnCaramelFrappuccino"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Caramel Frappuccino"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnMochaFrappuccino"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Mocha Frappuccino"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/btnVanillaFrappuccino"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="start|center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Vanilla Frappuccino"
                            android:textColor="#1F2937"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== PASTRIES Category (typical coffee shop family) ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headerPastries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
