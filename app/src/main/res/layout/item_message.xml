<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="0.5dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Avatar with colored background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_avatar_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_message"
                android:padding="12dp"
                app:tint="#1976D2"
                android:contentDescription="@string/content_description"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Unread indicator dot -->
        <View
            android:id="@+id/v_unread_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circle_badge"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/cv_avatar_container"
            app:layout_constraintTop_toTopOf="@id/cv_avatar_container"/>

        <!-- Title and metadata row -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New message from Admin"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/cv_avatar_container"
            app:layout_constraintEnd_toStartOf="@id/tv_time"
            app:layout_constraintTop_toTopOf="@id/cv_avatar_container"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:20"
            android:textColor="#999999"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"/>

        <!-- Message body -->
        <TextView
            android:id="@+id/tv_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your reward is ready to collect. Click here to view details."
            android:textColor="#666666"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@id/cv_avatar_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <!-- Optional: Category badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            app:chipBackgroundColor="#223347"
            app:chipMinHeight="24dp"
            app:chipStartPadding="8dp"
            app:chipEndPadding="8dp"
            app:chipStrokeWidth="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/cv_avatar_container"
            app:layout_constraintTop_toBottomOf="@id/tv_body"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>