<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- 1. HEADER BACKGROUND -->
        <View
            android:id="@+id/viewHeaderBg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_header_gradient"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Screen Title -->
        <TextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Notifications"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <TextView
            android:id="@+id/tvScreenSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Reach your users instantly"
            android:textColor="#E0E7FF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvScreenTitle"
            app:layout_constraintTop_toBottomOf="@id/tvScreenTitle" />

        <!-- 2. MAIN CONTENT CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvScreenSubtitle"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Message Details"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Title Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_title"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Notification Title"
                    app:boxBackgroundColor="?android:attr/colorBackground"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#4F46E5"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:hintTextColor="#4F46E5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="50"
                        android:textColor="?android:attr/textColorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Message Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_message"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Message Body"
                    app:boxBackgroundColor="?android:attr/colorBackground"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#4F46E5"
                    app:counterEnabled="true"
                    app:counterMaxLength="200"
                    app:hintTextColor="#4F46E5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:textColor="?android:attr/textColorPrimary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="24dp"
                    android:background="?android:attr/listDivider" />

                <!-- Target Audience -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Target Audience"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Send to All Switch -->
                <LinearLayout
                    android:id="@+id/ll_send_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send to Everyone"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blast message to all users"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_send_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/chip_stroke_selector"
                        app:trackTint="@color/chipBackground"/>
                </LinearLayout>

                <!-- Filters Container (Visible by default for preview, toggle via code) -->
                <LinearLayout
                    android:id="@+id/ll_filters_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- 1. Gender Filter -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Gender"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_male"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_female"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- 2. Age Range Filter -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Age Range"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_age_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 - 65"
                            android:textColor="#4F46E5"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/slider_age_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:stepSize="1"
                        android:valueFrom="18"
                        android:valueTo="100"
                        app:thumbColor="#4F46E5"
                        app:trackColorActive="#4F46E5"
                        app:trackColorInactive="#E0E7FF" />

                    <TextView
                        android:id="@+id/btn_reset_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Reset"/>

                    <!-- 3. Location Filter (NEW) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Adress"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_loc_casablanca"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hassan"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_loc_rabat"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agdal"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_loc_marrakech"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Al Irfane"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_loc_other"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- 4. Last Visit Filter -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Last Visit"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_last_visit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_visit_3days"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last 3 days"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_visit_week"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Week"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_visit_month"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Month"
                            android:textColor="?android:attr/textColorPrimary"
                            app:chipBackgroundColor="#10000000" />
                    </com.google.android.material.chip.ChipGroup>

                    <!-- 5. Birthday Filter -->
                    <LinearLayout
                        android:id="@+id/ll_birthday_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/birthday_filter_background"
                        android:backgroundTint="#FFF1F2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Birthday"
                            android:src="@drawable/ic_cake"
                            app:tint="#E11D48" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="Target users with birthday today"
                            android:textColor="#BE123C"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_birthday_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="#E11D48"
                            app:trackTint="#FECDD3" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Est Reach -->
                <LinearLayout
                    android:id="@+id/ll_reach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/birthday_filter_background"
                    android:backgroundTint="#F3F4F6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="#6B7280" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated Reach"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_target_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,234 Users"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_refresh_count"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_popup_sync"
                        app:tint="#4F46E5" />

                </LinearLayout>

                <!-- Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_preview"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Preview"
                        android:textColor="#4F46E5"
                        app:cornerRadius="12dp"
                        app:strokeColor="#4F46E5" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_send"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4F46E5"
                        android:text="Send Now"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="textEnd"
                        app:iconTint="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>