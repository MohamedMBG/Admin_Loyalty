<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cashier_main"
    android:background="@color/white" >

    <!-- Enhanced Header Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F8F9FA"
        android:layout_margin="15dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.005"
                android:text="QR Generating"
                android:textColor="#1A1A1A"
                android:textSize="32sp"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Left Column - Input Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/input_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_qr"
        app:layout_constraintBottom_toTopOf="@id/card_confirm"
        app:layout_constraintWidth_percent="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_receipt"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Receipt Number"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                app:startIconTint="#6B7280"
                app:hintTextColor="#6B7280">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="45dp"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:paddingVertical="18dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_amount"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Total Amount"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:prefixText="MAD "
                app:startIconDrawable="@android:drawable/ic_menu_info_details"
                app:startIconTint="#6B7280"
                app:hintTextColor="#6B7280">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:paddingStart="40dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:paddingVertical="18dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_generate"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="28dp"
                android:text="Generate QR Code"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_view"
                android:backgroundTint="@color/colorSuccess"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:cornerRadius="14dp"
                android:elevation="0dp"/>

            <!-- Status Section in Input Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_timer"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:chipIcon="@android:drawable/ic_lock_idle_alarm"
                    app:chipIconVisible="true"
                    app:chipBackgroundColor="#F3F4F6"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● Ready"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"
                    android:layout_marginEnd="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_refresh"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Refresh"
                    android:backgroundTint="@color/white"
                    android:textSize="14sp"
                    android:minWidth="0dp"
                    app:icon="@android:drawable/ic_popup_sync"
                    app:iconGravity="textStart"
                    app:cornerRadius="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Right Column - QR Display Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_qr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintStart_toEndOf="@id/input_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_confirm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Code Display"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="32dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="#E5E7EB">

                <ImageView
                    android:id="@+id/img_qr"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:contentDescription="QR code"
                    android:padding="24dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_qr_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR code to pay"
                android:textSize="18sp"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="28dp"/>

            <ProgressBar
                android:id="@+id/progress_issuing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:indeterminate="true"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Confirmation Card - Full Width at Bottom -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="28dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvConfirmTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ Payment Received"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#1A1A1A"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_confirm_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receipt #— · MAD —"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_confirm_timer"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10s"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                app:chipIcon="@android:drawable/ic_lock_idle_alarm"
                app:chipIconVisible="true"
                app:chipBackgroundColor="#FEF3C7"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                app:cornerRadius="12dp"
                app:strokeWidth="2dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="Confirm"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="textEnd"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>